<% if user_signed_in? %>
<table class="table table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Twitter</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td>
        <%= link_to friend.first_name + " " + friend.last_name, friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: 'btn btn-secondary' %>

<% end  %>
